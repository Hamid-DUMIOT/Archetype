{% extends 'base.html.twig' %}


{% block title %}{% endblock %}
{% block body %}

	<h1 class="text-black">Publication</h1>

	<div class="container pt-5 mt-5">
		{% for publication in publications %}

			<div class="row">
				<div class="col-3"></div>
				<div class="col-3">
					<img src="{{ asset(publication.image) }} " alt"..." class="img-thumbnail">
				</div>
				<div class="col-6">
					<h2 class="TitrePublication">
						{{ publication.titre }}</h2>
					{{ publication.datePub ? publication.datePub|date('Y-m-d') : '' }}
					<p>
						{{ publication.contenuPub }}
					</p><br>
					<div class="col-b-5">
						<a href="{{ path('publication_show', {'id': publication.id}) }}">En savoir plus
						</a><br>
						<span>
							Comment</span>
						<a href="{{ path('publication_edit', {'id': publication.id}) }}">edit</a>
					</div>
				</div>
			</div>
		</div>
	{% else %}
		<tr>
			<td colspan="4">no records found</td>
		</tr>
	{% endfor %}
</div>

{# display navigation #}
<div class="d-flex justify-content-center mt-5">

    {{ knp_pagination_render(publications, 'base/pagination.html.twig') }}
</div>
{% endblock %}
