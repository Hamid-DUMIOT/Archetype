{% extends 'base.html.twig' %}

{% block title %}Recrutement
{% endblock %}

{% block body %}

	<div class="container mt-5 pt-5">
		<h1>Trouvez le job de vos rÃªves !</h1>

		{% for offre in recrutement %}
			{#<a href="#">#}
			<div class='offre-card'>
				<h4>{{offre.nomOffre}}</h4>
				{#<span>{{offre.dateOffrePub}}</span>#}
				<div class="text-left">
					<span class='offre-input'>{{offre.dateOffrePub|date('d/m/Y')}}</span>
					<span class='offre-input'>{{offre.typeoffre}}</span>
					<span id="cercle"/>
					<span class='offre-input'>{{offre.lieu}}</span>
				</div>
				<div class='description-offre'>
					<span>{{offre.descriptionOffre|striptags|slice(0, 200)}}...</span>
				</div>
				<a href="{{ path ('uneOffre', {'slug' : offre.slug })}}" class="btn btn-outline-dark pull-right">+ d'Infos</a>

			</div>


		{% endfor %}


	</div>

	<style>
		h1 {
			padding-bottom: 2%;
		}

		h4 {
			padding-bottom: 10px;
		}

		.offre-card {
			border: 1px solid grey;
			border-radius: 8px;
			padding: 20px;
			margin: 20px;
			box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
			transition: 0.3s;

		}

		.offre-card:hover {
			box-shadow: 0 10px 18px 0 rgba(0, 0, 0, 0.2);
		}

		.offre-input {
			margin-right: 10px;
			margin-top: 20px;
			color: grey;
		}


		.description-offre {
			margin-top: 20px;
			text-align: justify;
		}

		.btn {
			margin-top: 20px;
		}


