{% extends 'base.html.twig' %}

{% block title %}Se connecter - ArcheType{% endblock %}


{% block body %}

<link rel="stylesheet" href="{{ asset('css/login.css')}}">

<section class="vh-100 bg-image mt-5" style="background-image: url('/img/homepage/fond.png');">
	<div class="mask d-flex align-items-center h-100 gradient-custom-3">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-12 col-md-9 col-lg-7 col-xl-6">
					<div class="card" style="border-radius: 15px;">
						<div class="card-body p-5">
							<h2 class="text-uppercase text-center mb-5">Se connecter</h2>
							<form method="post">
								{% if error %}
									<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								{% endif %}
								<div class="form-outline mb-4">
									<input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocusid="form3Example3cg" class="form-control form-control-lg"/>
									<label class="form-label" for="form3Example3cg">Votre Email</label>
								</div>
								<div class="form-outline mb-4">
									<input type="password" id="inputPassword" class="form-control form-control-lg" name="password" autocomplete="current-password" required/>
									<label class="form-label" for="form3Example4cg">Votre mot de passe</label>
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								</div>
								<div class="form-check d-flex justify-content-center mb-5">
									<input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg"/>
									<label class="form-check-label" for="form2Example3g">
										J'accepte les 
										<a href="{{ path('cgu') }}" class="text-body">
											<u>CGU</u>
										</a>
									</label>
								</div>
								<div class="d-flex justify-content-center">
									<button class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" type="submit">
										Connexion
									</button>
								</div>
								<div class="d-flex justify-content-center mt-5">
									<a class="text-body text-muted" id="mdp" href="{{ path('reset_password') }}">Mot de passe oubli√©</a><br/>
								</div>
								<p class="text-center text-muted mt-3 mb-0">Pas encore de compte?
									<a href="{{ path('register') }}" class="text-body">
										S'inscrire
									</a>
								</p>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

{% endblock %}

