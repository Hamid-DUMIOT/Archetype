</div>


	<style>
	.img-fond{
		background-image: url('/img/homepage/bg.png');
		width: 100%;
	}

	h1 {
		text-align: center;
	}


	.image-ronde {
		width: 90%;
		border: none;
		-moz-border-radius: 50%;
		-webkit-border-radius: 50%;
		border-radius: 50%;
	}

	.img-txt {
		display: grid;
		margin: 10%;
		padding-left: 10%;

	}

	/* les enfants se superposent */
	.img-txt > * {
		grid-area: 1 / 1/-1/-1;
		/* raccourci pour grid-row et grid-column */
	}

	/* le texte */
	.txt {
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		color: #fff;
		opacity: 0;
		filter:invert(0); /* antibug si effet sur img */
		transition: opacity 0.8s;
		background: rgba(0, 0, 0, 0.6);
		width: 90%;
		border: none;
		-moz-border-radius: 50%;
		-webkit-border-radius: 50%;
		border-radius: 50%;
	}


	/* le survol */
	.txt:hover {
		opacity: 1;
		width: 90%;
		border: none;
		-moz-border-radius: 50%;
		-webkit-border-radius: 50%;
		border-radius: 50%;
	}</style>{% endblock %}
